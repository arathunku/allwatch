<table border="0" cellpadding="0" cellspacing="0" align="center" style="
                                                                        background-color: #f5f5f5;
                                                                        font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
                                                                        width: 620">
  <tbody>
    <tr>
      <td colspan="3">
        <div class="header" style="font-size: 3em;
                                   text-align: center;
                                   color: grey;
                                   padding-top: 1em;
                                   ">allWatch
        </div>
      </td>
    </tr>
  </tbody>
  <tbody>
    <tr>
      <td style="border-bottom-style: solid; 
                 border-bottom-color: grey;
                 border-bottom-width:2px;
                 padding-left: 0.25em;
                 ">Nazwa</td>
      <td style="border-bottom-style: solid;
                 border-bottom-color: grey;
                 border-bottom-width:2px; 
                 text-align: center;
                 ">Kup teraz</td>
      <td style="border-bottom-style: solid;
                 border-bottom-color: grey;
                 border-bottom-width:2px; 
                 text-align: center;">Licytacja</td>
    </tr>
    <% @auctions.each do |auction|%>
    <tr style="line-height: 2.5em;">
      <td style="border-bottom-width: 1px; 
                border-bottom-style: dashed; 
                border-bottom-color: grey;
                padding-left: 0.5em">
        <a href="http://www.allegro.pl/i<%= auction.auction_id %>.html" 
        style="text-decoration: none;
               color: #0084b4;"target="_blank"><%= auction.name %></a>
      </td>
      <td style="width: 5em; 
                border-left-style: solid; 
                border-left-color: grey;
                border-left-width:3px;
                border-bottom-width: 1px;
                border-bottom-style: dashed; 
                border-bottom-color: grey;
                text-align: center;"><%= auction.price_buy %> zł</td>
      <td style="width: 5em;
                 border-left-style: solid;
                 border-left-color: grey;
                 border-left-width:3px;
                 border-bottom-width: 1px;
                 border-bottom-style: dashed;
                 border-bottom-color: grey;
                 text-align: center;"><%= auction.price_atm %> zł</td>
    </tr> 
    <% end %>
  </tbody>
  <tbody>
    <tr>
      <td colspan="3">
        <div class="footer" style="font-size: 0.75em;
                                   margin: 2em 0em 0em 0em;
                                   border-top-color: #ddd;
                                   border-top-style: solid;
                                   border-top-width: 1px;
                                   background-color: #eee;
                                   color: #777;
                                   line-height: 2.25em;
                                   width: 100%;
                                   text-align: center;">
          <%= render 'footer' %>
        </div>
      </td>
    </tr>
  </tbody>
</table>