<!doctype html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div style="margin-top: 4em;"class="container-fluid">
    <div class="row-fluid">
      <div class="span8">
        <%= render 'layouts/flash', flash: flash %>
        <%= yield %>
      </div>
      <div class="span4">
        <div class="sidebar">
          <%= render 'layouts/sidebar' %>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= render 'layouts/footer' %>
      </div>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
